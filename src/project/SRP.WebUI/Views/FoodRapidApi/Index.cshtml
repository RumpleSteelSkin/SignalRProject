@model ICollection<ResultTastyApiDto>
@{
    ViewBag.Title = "title";
    Layout = null;
}

<html>
@await Component.InvokeAsync("_UILayoutHeaderPartialComponent")
<body>
@await Component.InvokeAsync("_UILayoutNavbarPartialComponent")
<br/><br/>
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-dark mb-30">
                <a class="breadcrumb-item text-white" href="/Default/Index">Home</a>
                <a class="breadcrumb-item text-white" href="/Menu/Index">API List</a>
                <span class="breadcrumb-item active">Tasty API</span>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-12 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Product Name</th>
                    <th>Total Minute</th>
                    <th>Video</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@item.ThumbnailUrl" style="width: 50px; height: 50px" alt=""/></td>
                        <td>@item.Name</td>
                        @{
                            if (item.TotalTimeMinutes == 0)
                            {
                                <td>15</td>
                            }
                            else
                            {
                                <td>@item.TotalTimeMinutes</td>
                            }
                        }
                        <td><a href="@item.VideoUrl" target="_blank" class="btn btn-warning">Video</a></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@await Component.InvokeAsync("_UILayoutFooterPartialComponent")
@await Component.InvokeAsync("_UILayoutScriptPartialComponent")

<script src="/feane/js/sweetalert2.js"></script>
</body>
</html>
