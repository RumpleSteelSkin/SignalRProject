@model ICollection<ResultMessageDto>?

@{
  Layout = null;
  string BaseUrl = ApiRoutes.BaseUrl;
}

<html>
@await Component.InvokeAsync("_UILayoutHeaderPartialComponent")
<body>
@await Component.InvokeAsync("_UILayoutNavbarPartialComponent")

<br/> <br/>
<section class="food_section layout_padding-bottom">
  <div class="container">
    <h3>Message Page</h3>

    <div class="container mt-5">
      <div class="row">
        <div class="col-12">
          <h3 class="text-center mb-4">SignalR Restaurant Instant Message</h3>
        </div>
      </div>


      <div class="row p-1">
        <div class="col-2">Username:</div>
        <div class="col-5">
          <input type="text" id="userinput" class="form-control"/>
        </div>
      </div>


      <div class="row p-1">
        <div class="col-2">Message:</div>
        <div class="col-5">
          <input type="text" class="form-control" id="messageinput"/>
        </div>
      </div>


      <div class="row p-1">
        <div class="col-2"></div>
        <div class="col-3">
          <input type="button" id="sendbutton" value="Send" class="btn btn-warning"/>
        </div>
      </div>


      <div class="row p-1">
        <div class="col-12">
          <hr/>
        </div>
      </div>


      <div class="row p-1">
        <div class="col-12">
          <ul id="messagelist" class="list-group"></ul>
        </div>
      </div>
    </div>

  </div>
</section>
<script>
  const apiBaseUrl = '@Html.Raw(BaseUrl)';
</script>
@await Component.InvokeAsync("_UILayoutFooterPartialComponent")
@await Component.InvokeAsync("_UILayoutScriptPartialComponent")

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
<script src="~/js/chat.js"></script>

</body>
</html>