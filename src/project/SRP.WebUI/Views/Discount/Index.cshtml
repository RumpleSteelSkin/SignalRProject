@model ICollection<ResultDiscountDto>?

@{
    ViewBag.Title = "title";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Discount Process</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Discount List</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can perform transactions related to the Discount below.
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Discount Title</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Description</th>
                                <th scope="col">ImageUrl</th>
                                <th scope="col">Status</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Update</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach(var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Title</td>
                                    <td>@item.Amount</td>
                                    <td>@item.Description</td>
                                    <td>@item.ImageUrl</td>
                                    <td>
                                        @if (!item.Status)
                                        {
                                            <a href="/Discount/StatusChangeById/@item.Id?status=true"
                                               class="btn btn-outline-success">Active</a>
                                        }
                                        else
                                        {
                                            <a href="/Discount/StatusChangeById/@item.Id?status=false"
                                               class="btn btn-outline-secondary">Inactive</a>
                                        }
                                    </td>
                                    <td><a href="/Discount/Delete/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a href="/Discount/Update/@item.Id" class="btn btn-outline-success">Update</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <td><a href="/Discount/Create" class="btn btn-outline-primary">New</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

