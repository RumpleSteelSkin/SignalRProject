@model CreateDiscountDto

@{
	ViewBag.Title = "title";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Discount Processes</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">New Discount</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Title</label>
								<input type="text" class="form-control" id="Title" asp-for="Title"
								       placeholder="Enter Discount Title">
							</div>

							<div class="form-group">
								<label for="Amount">Amount</label>
								<input type="text" class="form-control" id="Amount" asp-for="Amount"
								       placeholder="Enter Discount Amount">
							</div>
							
							<div class="form-group">
								<label for="Description">Description</label>
								<input type="text" class="form-control" id="Description" asp-for="Description"
								       placeholder="Enter Discount Price">
							</div>

							<div class="form-group">
								<label for="ImageUrl">Image</label>
								<input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl"
								       placeholder="Enter Discount Image">
							</div>
							
							<div class="form-group">
								<button class="btn btn-primary">Discount Add</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
