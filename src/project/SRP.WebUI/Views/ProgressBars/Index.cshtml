
@{
	ViewBag.Title = "title";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	string BaseUrl = ApiRoutes.BaseUrl;
}
@await Component.InvokeAsync("_DefaultSignalRScriptsPartialComponent")

<script type="text/javascript">
	const apiBaseUrl = '@Html.Raw(BaseUrl)';
	const sstats = [
		{receive: "moneyCaseGetTotalPriceQuery", element: "#moneyCaseGetTotalPriceQuery"},
		{receive: "orderGetActiveCountQuery", element: "#orderGetActiveCountQuery"},
		{receive: "menuTableGetCountQuery", element: "#menuTableGetCountQuery"},
		{receive: "menuTableGetAllQuery", element: "#menuTableGetAllQuery"},
		{receive: "notificationGetAllQuery", element: "#notificationGetAllQuery"},
		{receive: "bookingGetAllQuery", element: "#bookingGetAllQuery"},

	];
	$(document).ready(() => {
		var connection = new signalR.HubConnectionBuilder()
			.withUrl(apiBaseUrl + "signalrhub")
			.build();
		$("#connstatus").text(connection.state);
		connection.on("ReceiveProgress", (data) => {
			if (data.hasOwnProperty("menuTableGetAllQuery")) {
				let trueTable = 0;
				let totalTable = data.menuTableGetAllQuery.length;
				data.menuTableGetAllQuery.forEach(t => {
					if (t.status === true) {
						trueTable++;
					}
				});
				let percentage = totalTable > 0 ? Math.round((trueTable / totalTable) * 100) : 0;
				$("#menuTableGetAllQueryT").empty().append(`
				<div class="d-flex justify-content-between mb-1">
					<span class="text-muted">Full Table</span>
					<span class="text-muted fw-bold">${trueTable}</span>
				</div>
				<div class="progress mb-2" style="height: 7px;">
					<div class="progress-bar bg-success" role="progressbar" style="width: ${percentage}%" 
						aria-valuenow="${percentage}" aria-valuemin="0" aria-valuemax="100" 
						data-toggle="tooltip" data-placement="top" title="${percentage}%"></div>
				</div>
			`);
				let percentagef = totalTable > 0 ? Math.round(((totalTable - trueTable) / totalTable) * 100) : 0;
				$("#menuTableGetAllQueryF").empty().append(`
				<div class="d-flex justify-content-between mb-1">
					<span class="text-muted">Empty Table</span>
					<span class="text-muted fw-bold">${(totalTable - trueTable)}</span>
				</div>
				<div class="progress mb-2" style="height: 7px;">
					<div class="progress-bar bg-danger" role="progressbar" style="width: ${percentagef}%" 
						aria-valuenow="${percentagef}" aria-valuemin="0" aria-valuemax="100" 
						data-toggle="tooltip" data-placement="top" title="${percentagef}%"></div>
				</div>
			`);
			}

			if (data.hasOwnProperty("notificationGetAllQuery")) {
				let trueNot = 0;
				let totalNot = data.notificationGetAllQuery.length;
				data.notificationGetAllQuery.forEach(n => {
					if (n.status === true) {
						trueNot++;
					}
				});
				let percentage = totalNot > 0 ? Math.round((trueNot / totalNot) * 100) : 0;
				$("#notificationGetAllQueryT").empty().append(`
				<div class="d-flex justify-content-between mb-1">
					<span class="text-muted">Notifications You See</span>
					<span class="text-muted fw-bold">${trueNot}</span>
				</div>
				<div class="progress mb-2" style="height: 7px;">
					<div class="progress-bar bg-info" role="progressbar" style="width: ${percentage}%" 
						aria-valuenow="${percentage}" aria-valuemin="0" aria-valuemax="100" 
						data-toggle="tooltip" data-placement="top" title="${percentage}%"></div>
				</div>
			`);
			}
			if (data.hasOwnProperty("bookingGetAllQuery")) {
				let trueBooking = 0;
				let totalBooking = data.bookingGetAllQuery.length;
				data.bookingGetAllQuery.forEach(n => {
					if (n.description === "Reservation Accepted") {
						trueBooking++;
					}
				});
				let percentage = totalBooking > 0 ? Math.round((trueBooking / totalBooking) * 100) : 0;
				$("#bookingGetAllQueryT").empty().append(`
				<div class="d-flex justify-content-between mb-1">
					<span class="text-muted">Reservation Accepted</span>
					<span class="text-muted fw-bold">${trueBooking}</span>
				</div>
				<div class="progress mb-2" style="height: 7px;">
					<div class="progress-bar bg-warning" role="progressbar" style="width: ${percentage}%" 
						aria-valuenow="${percentage}" aria-valuemin="0" aria-valuemax="100" 
						data-toggle="tooltip" data-placement="top" title="${percentage}%"></div>
				</div>
			`);
			}
			sstats.forEach(stat => {
				if (data.hasOwnProperty(stat.receive)) {
					$(stat.element).text(data[stat.receive]);
				}
			});

		});

		connection.start().then(() => {
			$("#connstatus").text(connection.state);
			setInterval(() => {
				connection.invoke("SendProgress").catch(err => console.error(err));
			}, 3000);
		}).catch((error) => {
			console.error("SignalR connection failed:", error);
		});
	});
</script>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Admin Statistic & Status</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="row row-card-no-pd">
					<div class="col-md-4">
						<div class="card">
							<div class="card-body">
								<p class="fw-bold mt-1">Total amount in cash</p>
								<h4><b id="moneyCaseGetTotalPriceQuery"></b></h4>
								<a href="/Order/Add" class="btn btn-primary btn-full text-left mt-3 mb-3"><i
										class="la la-plus"></i> New Order</a>
							</div>
							<div class="card-footer">
								<ul class="nav">
									<li class="nav-item"><a class="btn btn-default btn-link" href="/Order/Index"><i
												class="la la-history"></i>
											Orders</a></li>
									<li class="nav-item ml-auto"><a class="btn btn-default btn-link"
									                                href="/ProgressBars"><i
												class="la la-refresh"></i> Refresh</a></li>
								</ul>
							</div>
						</div>
					</div>
					<div class="col-md-5">
						<div class="card">
							<div class="card-body">
								<div class="progress-card" id="menuTableGetAllQueryT"></div>
								<div class="progress-card" id="menuTableGetAllQueryF"></div>
								<div class="progress-card" id="notificationGetAllQueryT"></div>
								<div class="progress-card" id="bookingGetAllQueryT"></div>
							</div>
						</div>
					</div>
					<div class="col-md-3">
						<div class="card card-stats">
							<div class="card-body">
								<p class="fw-bold mt-1">Statistic</p>
								<div class="row">
									<div class="col-5">
										<div class="icon-big text-center icon-warning">
											<i class="la la-pie-chart text-warning"></i>
										</div>
									</div>
									<div class="col-7 d-flex align-items-center">
										<div class="numbers">
											<p class="card-category">Active Orders</p>
											<h4 class="card-title" id="orderGetActiveCountQuery"></h4>
										</div>
									</div>
								</div>
								<hr/>
								<div class="row">
									<div class="col-5">
										<div class="icon-big text-center">
											<i class="la la-heart-o text-primary"></i>
										</div>
									</div>
									<div class="col-7 d-flex align-items-center">
										<div class="numbers">
											<p class="card-category">Table Count</p>
											<h4 class="card-title" id="menuTableGetCountQuery"></h4>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

