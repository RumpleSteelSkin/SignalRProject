@model CreateMailDto

@{
    ViewBag.Title = "Mail Send Page";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profile Settings</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Password and Info Update Page</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ToName">To Name</label>
                                <input type="text" class="form-control" id="ToName" asp-for="ToName"
                                       placeholder="Enter To Name">
                            </div>

                            <div class="form-group">
                                <label for="ToMail">To Mail</label>
                                <input type="email" class="form-control" id="ToMail" asp-for="ToMail"
                                       placeholder="Enter To Mail">
                            </div>

                            <div class="form-group">
                                <label for="Subject">Subject</label>
                                <input type="text" class="form-control" id="Subject" asp-for="Subject"
                                       placeholder="Enter Subject">
                            </div>

                            <div class="form-group">
                                <label for="Mail">Mail</label>
                                <textarea rows="5" asp-for="Body" id="Body" class="form-control"></textarea>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary">Send Mail</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
