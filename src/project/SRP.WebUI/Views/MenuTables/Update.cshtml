@model UpdateMenuTableDto?

@{
    ViewBag.Title = "MenuTable Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">MenuTable Processes</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="Update" asp-controller="MenuTables">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update MenuTable Page</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />

                            <div class="form-group">
                                <label for="Name">Name</label>
                                <input type="text" class="form-control" id="Name" asp-for="Name"
                                       placeholder="Enter MenuTable Name">
                            </div>
                            
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Update MenuTable</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>