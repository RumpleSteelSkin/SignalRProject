@model ICollection<ResultFeatureDto>

<div class="hero_area">
    <section class="slider_section ">
        <div id="customCarousel1" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @if (Model.Any())
                {
                    var index = 0;
                    foreach (var item in Model)
                    {
                        <div class="carousel-item @(index == 0 ? "active" : "")">
                            <div class="container ">
                                <div class="row">
                                    <div class="col-md-7 col-lg-6 ">
                                        <div class="detail-box">
                                            <h1>@item.Title</h1>
                                            <p>@item.Description</p>
                                            <div class="btn-box">
                                                <a href="/Menu/Index" class="btn1">Order Now</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        index++;
                    }
                }
                else
                {
                    <div class="carousel-item active">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-7 col-lg-6">
                                    <div class="detail-box">
                                        <h1>No Features Found</h1>
                                        <p>Please add some feature items to display.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="container">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model?.Count(); i++)
                    {
                        <li data-target="#customCarousel1" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                    }
                </ol>
            </div>
        </div>
    </section>
</div>