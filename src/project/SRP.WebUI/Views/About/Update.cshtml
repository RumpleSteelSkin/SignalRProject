@model UpdateAboutDto?

@{
    ViewBag.Title = "About Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">About Processes</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="Update" asp-controller="About">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update About Page</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />

                            <div class="form-group">
                                <label for="Title">Title</label>
                                <input type="text" class="form-control" id="Title" asp-for="Title"
                                       placeholder="Enter About Title">
                            </div>

                            <div class="form-group">
                                <label for="Description">Description</label>
                                <input type="text" class="form-control" id="Description" asp-for="Description"
                                       placeholder="Enter About Price">
                            </div>

                            <div class="form-group">
                                <label for="ImageUrl">Image</label>
                                <input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl"
                                       placeholder="Enter About Image">
                            </div>
                            
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Update About</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>