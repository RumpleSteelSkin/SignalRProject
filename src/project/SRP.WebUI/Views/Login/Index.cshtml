@model LoginDto;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>SignalR Restaurant Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
    <link rel="stylesheet" href="~/colorlib-regform-32/css/style.css"/>
</head>
<body class="form-v6">
<div class="page-content">
    <div class="form-v6-content">
        <div class="form-left">
            <img src="~/colorlib-regform-32/images/Sauce1.jpg" alt="form" style="height: 684px; width: 584px">
        </div>
        <form class="form-detail" method="post">
            <h2>Login Form</h2>
            <div class="form-row">
                <input type="text" name="UserNameOrEmail" id="UserNameOrEmail" class="input-text"
                       placeholder="UserNameOrEmail" required asp-for="UserNameOrEmail">
            </div>

            <div class="form-row">
                <input type="password" name="Password" id="Password" class="input-text" placeholder="Password" required
                       asp-for="Password">
            </div>

            <div class="form-row-last">
                <input type="submit" name="register" class="register" value="Login">
            </div>
        </form>
    </div>
</div>
</body>
</html>