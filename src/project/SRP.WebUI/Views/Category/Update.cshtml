@model UpdateCategoryDto

@{
    ViewBag.Title = "Category Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Category Processes</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="Update" asp-controller="Category">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update Category Page</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />

                            <div class="form-group">
                                <label asp-for="Name" class="form-label"></label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Enter Category Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Update Category</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>