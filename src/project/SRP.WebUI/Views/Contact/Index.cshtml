@model ICollection<ResultContactDto>?

@{
    ViewBag.Title = "title";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Contact Process</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Contact List</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can perform transactions related to the Contact below.
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Location</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Mail</th>
                                <th scope="col">FooterTitle</th>
                                <th scope="col">FooterDescription</th>
                                <th scope="col">OpenDays</th>
                                <th scope="col">OpenDaysDescription</th>
                                <th scope="col">OpenHours</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Update</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach(var item in Model){
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Location</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Mail</td>
                                    <td>@item.FooterTitle</td>
                                    <td>@item.FooterDescription</td>
                                    <td>@item.OpenDays</td>
                                    <td>@item.OpenDaysDescription</td>
                                    <td>@item.OpenHours</td>
                                    <td><a href="/Contact/Delete/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a href="/Contact/Update/@item.Id" class="btn btn-outline-success">Update</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <td><a href="/Contact/Create" class="btn btn-outline-primary">New</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

