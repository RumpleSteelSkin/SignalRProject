@model CreateTestimonialDto

@{
	ViewBag.Title = "title";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Testimonial Processes</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">New Testimonial</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Name</label>
								<input type="text" class="form-control" id="Name" asp-for="Name"
								       placeholder="Enter Testimonial Name">
							</div>

							<div class="form-group">
								<label for="Title">Title</label>
								<input type="text" class="form-control" id="Title" asp-for="Title"
								       placeholder="Enter Testimonial Title">
							</div>

							<div class="form-group">
								<label for="Comment">Comment</label>
								<input type="text" class="form-control" id="Comment" asp-for="Comment"
								       placeholder="Enter Testimonial Comment">
							</div>

							<div class="form-group">
								<label for="ImageUrl">Image</label>
								<input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl"
								       placeholder="Enter Testimonial Image">
							</div>

							<div class="form-group">
								<button class="btn btn-primary">Testimonial Add</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
