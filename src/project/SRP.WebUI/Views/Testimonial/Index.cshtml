@model ICollection<ResultTestimonialDto>?

@{
    ViewBag.Title = "title";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Testimonial Process</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Testimonial List</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can perform transactions related to the Testimonial below.
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Testimonial Name</th>
                                <th scope="col">Title</th>
                                <th scope="col">Comment</th>
                                <th scope="col">ImageUrl</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Update</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Title</td>
                                    <td>@item.Comment</td>
                                    <td>@item.ImageUrl</td>
                                    <td><a href="/Testimonial/Delete/@item.Id" class="btn btn-outline-danger">Delete</a>
                                    </td>
                                    <td><a href="/Testimonial/Update/@item.Id"
                                           class="btn btn-outline-success">Update</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <td><a href="/Testimonial/Create" class="btn btn-outline-primary">New</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

